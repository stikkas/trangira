         <children>
            <Label text="Статья расхода:" />
            <Label text="Сумма:" GridPane.rowIndex="1" />
            <Label text="Дата:" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" text="Добавить" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
